{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src/",
    "checkJs": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "newLine": "lf",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "scss/*": [
        "./scss/*"
      ],
      "ts/*": [
        "./ts/*"
      ]
    },
    "strict": true
  },
  "include": [
    "./*.d.ts",
    "./src/**/*"
  ]
}
