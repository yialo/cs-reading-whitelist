{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src/",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "newLine": "lf",
    "noEmit": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "common/*": [
        "./ts/common/*"
      ],
      "domains/*": [
        "./ts/domains/*"
      ],
      "scss/*": [
        "./scss/*"
      ],
      "ts/*": [
        "./ts/*"
      ]
    },
    "strict": true
  },
  "include": [
    "./src/**/*",
    "./custom.d.ts"
  ]
}
